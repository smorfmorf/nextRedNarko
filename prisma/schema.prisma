generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id       String @id @default(cuid())
  fullName String
  email    String @unique
  password String

  createdAt DateTime @default(now())
  updateAt  DateTime @updatedAt
}

model Category {
  id   String @id @default(cuid())
  name String @unique

  products Product[]

  createdAt DateTime @default(now())
  updateAt  DateTime @updatedAt
}

model Product {
  id String @id @default(cuid())

  name     String
  imageUrl String

  createdAt DateTime @default(now())
  updateAt  DateTime @updatedAt

  category   Category @relation(fields: [categoryId], references: [id])
  categoryId String

  ingredients Ingredient[]
}

model Ingredient {
  id       String @id @default(cuid())
  name     String
  price    Int
  imageUrl String

  products Product[]

  createdAt DateTime @default(now())
  updateAt  DateTime @updatedAt
}
